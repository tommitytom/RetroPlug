            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/src/**",
                "${workspaceFolder}/thirdparty/**"
            ],
            "defines": [
                "GB_INTERNAL",
                "GB_DISABLE_TIMEKEEPING",
                "GB_DISABLE_DEBUGGER"
            ],
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "windows-msvc-x64"
